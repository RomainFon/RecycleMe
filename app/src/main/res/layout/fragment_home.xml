<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/home_linear_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:textSize="40sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/search_recette_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Taper un nom de recette"
            android:textColorHint="#80FFFFFF"
            android:inputType="text"
            android:gravity="center"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/btn_search_recette"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chercher une recette"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_rounded"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/capriola"
            android:text="OU"
            android:textSize="40sp"
            android:textColor="@color/colorAccent"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter mes ingrédients"
            android:fontFamily="@font/capriola"
            android:textSize="30sp"
            android:textColor="@color/colorWhite"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_add_ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter un ingrédients"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_white_rounded"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>

        <Button
            android:id="@+id/btn_search_recette_ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voir les recettes"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_rounded"
            android:textColor="@color/colorWhite"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>